int kolvopredlosheniy(string a)
{
	int kolvo = 0;
	for (int i = 0; i <a.length(); i++)
	{
		if (a[i] == '.' or a[i] == '?' or a[i] == '!') {
			kolvo++;
		}
	}
	return kolvo;
}
